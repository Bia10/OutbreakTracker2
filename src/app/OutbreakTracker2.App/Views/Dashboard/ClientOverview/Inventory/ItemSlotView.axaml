<UserControl
    x:Class="OutbreakTracker2.App.Views.Dashboard.ClientOverview.Inventory.ItemSlotView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:inventory="clr-namespace:OutbreakTracker2.App.Views.Dashboard.ClientOverview.Inventory"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    d:DesignHeight="60"
    d:DesignWidth="135"
    x:DataType="inventory:ItemSlotViewModel"
    mc:Ignorable="d">
    <suki:GlassCard
        Width="135"
        Height="60"
        Margin="2"
        Padding="5"
        CornerRadius="8">
        <Grid RowDefinitions="Auto,*,Auto">
            <TextBlock
                Grid.Row="0"
                Margin="0,0,2,1"
                HorizontalAlignment="Right"
                FontSize="10"
                Text="{Binding SlotNumber}" />
            <TextBlock
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="10"
                FontWeight="Bold"
                Text="{Binding ItemName}"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="2"
                Margin="0,1,0,0"
                HorizontalAlignment="Center"
                FontSize="10"
                Text="{Binding DebugInfo}" />
        </Grid>
    </suki:GlassCard>
</UserControl>