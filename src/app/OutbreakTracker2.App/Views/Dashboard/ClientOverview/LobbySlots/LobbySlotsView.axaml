<UserControl
    x:Class="OutbreakTracker2.App.Views.Dashboard.ClientOverview.LobbySlots.LobbySlotsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lobbySlot="clr-namespace:OutbreakTracker2.App.Views.Dashboard.ClientOverview.LobbySlot"
    xmlns:local="clr-namespace:OutbreakTracker2.App.Views.Dashboard.ClientOverview.LobbySlots"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="local:LobbySlotsViewModel"
    mc:Ignorable="d">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding LobbySlotsView}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="lobbySlot:LobbySlotViewModel">
                    <lobbySlot:LobbySlotView DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>