<UserControl
    x:Class="OutbreakTracker2.App.Views.Dashboard.ClientOverview.InGamePlayer.PlayerAttributesView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:OutbreakTracker2.App.Views.Dashboard.ClientOverview.InGamePlayer"
    d:DesignHeight="100"
    d:DesignWidth="200"
    x:DataType="vm:PlayerAttributesViewModel"
    mc:Ignorable="d">
    <StackPanel Margin="0">
        <TextBlock Text="{Binding Power, StringFormat='Power: {0:F1}'}" />
        <TextBlock Text="{Binding CritBonus, StringFormat='Crit Bonus: {0:F2}x'}" />
        <TextBlock Text="{Binding Speed, StringFormat='Speed: {0:F1}'}" />
        <TextBlock Text="{Binding Size, StringFormat='Size: {0:F1}'}" />
    </StackPanel>
</UserControl>