<UserControl
    x:Class="OutbreakTracker2.App.Views.Dashboard.ClientOverview.InGamePlayer.PlayerConditionsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:converters="clr-namespace:OutbreakTracker2.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:vm="clr-namespace:OutbreakTracker2.App.Views.Dashboard.ClientOverview.InGamePlayer"
    d:DesignHeight="50"
    d:DesignWidth="400"
    x:DataType="vm:PlayerConditionsViewModel"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:ConditionToIconConverter x:Key="ConditionToIconConverter" />
        <converters:StatusToIconConverter x:Key="StatusToIconConverter" />
    </UserControl.Resources>

    <suki:GroupBox Header="Condition and Status">
        <WrapPanel Margin="5" HorizontalAlignment="Left">
            <StackPanel
                Margin="5"
                Orientation="Horizontal"
                Spacing="8">
                <suki:GlassCard
                    Width="210"
                    Height="60"
                    CornerRadius="5"
                    IsInteractive="False">
                    <StackPanel
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Spacing="10">
                        <avalonia:MaterialIcon
                            Width="24"
                            Height="24"
                            Foreground="LightGray"
                            Kind="{Binding ConditionMessage, Converter={StaticResource ConditionToIconConverter}}" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{Binding ConditionTitle}" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SukiLowText}"
                            Text="{Binding ConditionMessage}" />
                    </StackPanel>
                </suki:GlassCard>
            </StackPanel>
            <StackPanel
                Margin="5"
                Orientation="Horizontal"
                Spacing="8">
                <suki:GlassCard
                    Width="210"
                    Height="60"
                    CornerRadius="5"
                    IsInteractive="False">
                    <StackPanel
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Spacing="10">
                        <avalonia:MaterialIcon
                            Width="24"
                            Height="24"
                            Foreground="LightGray"
                            Kind="{Binding StatusMessage, Converter={StaticResource StatusToIconConverter}}" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{Binding StatusTitle}" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SukiLowText}"
                            Text="{Binding StatusMessage}" />
                    </StackPanel>
                </suki:GlassCard>
            </StackPanel>
        </WrapPanel>
    </suki:GroupBox>
</UserControl>
