<UserControl
    x:Class="OutbreakTracker2.Application.Views.Dashboard.ClientOverview.LobbyRoom.LobbyRoomView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:lobbyRoom="clr-namespace:OutbreakTracker2.Application.Views.Dashboard.ClientOverview.LobbyRoom"
    xmlns:converters="clr-namespace:OutbreakTracker2.Application.Converters"
    xmlns:lobbyRoomPlayer="clr-namespace:OutbreakTracker2.Application.Views.Dashboard.ClientOverview.LobbyRoomPlayer"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="lobbyRoom:LobbyRoomViewModel"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:CollectionIsNullOrEmptyConverter x:Key="CollectionIsNullOrEmptyConverter" />
    </UserControl.Resources>

    <Grid>
        <ScrollViewer IsVisible="{Binding PlayersView, Converter={StaticResource CollectionIsNullOrEmptyConverter}, ConverterParameter=Inverse}"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <suki:GlassCard
                    MinWidth="220"
                    MaxWidth="380"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Grid
                        Margin="15"
                        ColumnDefinitions="Auto,*,Auto"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="{Binding ScenarioName}"
                            TextTrimming="CharacterEllipsis" />
                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Height="1"
                            Margin="0,5,0,10"
                            Background="{DynamicResource SukiControlBorderBrush}" />

                        <Image
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="0,5,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{Binding ScenarioImageViewModel.ScenarioImage}"
                            Stretch="Uniform" />
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <avalonia:MaterialIcon
                                Width="18"
                                Height="18"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Kind="Star" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Difficulty:" />
                        </StackPanel>
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{Binding Difficulty}" />
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <avalonia:MaterialIcon
                                Width="18"
                                Height="18"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Kind="AccountGroup" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding PlayersDisplay}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <avalonia:MaterialIcon
                                Width="18"
                                Height="18"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Kind="Clock" />
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Time Left:" />
                        </StackPanel>
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{Binding TimeLeft}" />
                        <StackPanel
                            Grid.Row="5"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <avalonia:MaterialIcon
                                Width="18"
                                Height="18"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Kind="Signal" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Status:" />
                        </StackPanel>
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{Binding Status}" />
                    </Grid>
                </suki:GlassCard>

                <StackPanel
                    Margin="10"
                    HorizontalAlignment="Left">
                    <TextBlock
                        Margin="0,10,0,5"
                        HorizontalAlignment="Left"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Players" />
                    <Border
                        Height="1"
                        Margin="0,0,0,10"
                        Background="{DynamicResource SukiControlBorderBrush}" />

                    <ItemsControl ItemsSource="{Binding PlayersView}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="lobbyRoomPlayer:LobbyRoomPlayerViewModel">
                                <lobbyRoomPlayer:LobbyRoomPlayerView DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <suki:GlassCard
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            IsVisible="{Binding PlayersView, Converter={StaticResource CollectionIsNullOrEmptyConverter}}">
            <TextBlock
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="No active players, you're not in lobby room!" />
        </suki:GlassCard>
    </Grid>
</UserControl>